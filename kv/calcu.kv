<Calcu>:
    md_bg_color: 1,1,1,1
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: ("#3271F9")
        size_hint_y: 0.2
        radius: [0,0,0,0]
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}
        padding: '20dp'

        Widget:
            size_hint_y: None
            height: dp(35)

        MDLabel:
            text: "Kalkulator (Perkiraan)"
            font_style: "H6"
            bold: True
            color: 1,1,1,1
            pos_hint: {'center_x': 0.5}

    MDBoxLayout:
        id: box_out
        padding: "20dp"
        spacing: '20dp'
        orientation: 'vertical'
        size_hint_y: None
        
        height: root.height / 1.4
        width: root.width
        y: 20
        
        Widget:
            size_hint_y: None
            height: dp(25)
            
        MDBoxLayout:
            orientation: 'vertical'
            spacing: '15dp'
            
            MDLabel:
                text: "Berat (kilogram)"
                font_style: "Caption"
                pos_hint: {'center_x': 0.5}
                
            MDTextField:
                mode: "round"
                id: berat
                hint_text: "Masukkan berat"
                size_hint_x: None
                width: root.width - dp(75)
                pos_hint: {'center_x': 0.49,'center_y': 0.0}
                fill_color_normal: 1,1,1,1  
                font_style: "Caption" 
                size_hint_text: "5dp"    
                input_type: 'number'

        Widget:
            size_hint_y: None
            height: dp(50)

        MDBoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            MDLabel:
                text: "Tujuan"
                font_style: "Caption"
                pos_hint: {'center_x': 0.5}
            MDGridLayout:
                cols: 5
                padding: '0dp'
                size_hint_x: None
                adaptive_height: True
                width: root.width/ 1.3
                pos_hint: {'center_x': 0.5}
                MDLabel:
                    text: "Jawa Timur"
                    color:
                    size_hint_x: None
                    font_style: "Body2"
                    width: dp(80)
                    pos_hint: None, None
                    
                MDCheckbox:
                    id: tujuan
                    size_hint: None, None
                    size: "30dp", "30dp"
                    pos_hint: None, None
                    group: 'check'
                    on_active:
                        root.tujuan(self, self.active, "Jawa Timur")
                    
                Widget:
                    size_hint_x: None
                    width: dp(40)

                MDLabel:
                    text: "Jawa Tengah"
                    font_style: "Body2"
                    size_hint_x: None
                    width: dp(90)
                    color:
                MDCheckbox:
                    id: tujuan
                    size_hint: None, None
                    size: "30dp", "30dp"
                    group: 'check'
                    on_active:
                        root.tujuan(self, self.active, "Jawa Tengah")

                MDLabel:
                    text: "Jawa Barat"
                    color:
                    size_hint_x: None
                    font_style: "Body2"
                    width: dp(80)
                    pos_hint: None, None
                    
                MDCheckbox:
                    id: tujuan
                    text: "Jawa Barat"
                    size_hint: None, None
                    size: "30dp", "30dp"
                    pos_hint: None, None
                    group: 'check'
                    on_active:
                        root.tujuan(self, self.active, "Jawa Barat")

                Widget:
                    size_hint_x: None
                    width: dp(40)

                MDLabel:
                    
                    text: "Jakarta"
                    font_style: "Body2"
                    size_hint_x: None
                    width: dp(80)
                    color:
                MDCheckbox:
                    id: tujuan
                    size_hint: None, None
                    size: "30dp", "30dp"
                    group: 'check'
                    on_active:
                        root.tujuan(self, self.active, "Jakarta")


        MDFillRoundFlatButton:
            text: 'Hitung'
            width: root.width - dp(50)
            on_press:
                root.calc()

        MDBoxLayout:
            MDSeparator:
            MDLabel:
                text: "Hasil Perkiraan"
                adaptive_size: True
                font_style: "Caption"
            MDSeparator:
        
        Widget:
            size_hint_y: None
            height: "50dp"
        MDBoxLayout:
            orientation: 'vertical'
            spacing: '25dp'
            MDLabel:
                text: ""
                id: lblestimasi
            MDLabel:
                text: ""
                id: lblberat
            MDLabel:
                text: ""
                id: lbltujuan
            
        
        Widget:
            size_hint_y: None
            height: "-15dp"
        MDLabel:
            text: "Total Perkiraan Biaya"
            font_style: "Caption"
        MDTextField:
            id: tftotal
            hint_text: ""
            size_hint_x: None
            width: root.width - dp(75)
            mode: "round"
            fill_color_normal: ("#ffffff") 
            hint_text_color_normal: ("#3271F9")
            pos_hint: {'center_x': 0.5,}
            size_hint_y: None
            disabled: True
            line_color_normal: ("#ffffff") 

            
                     
