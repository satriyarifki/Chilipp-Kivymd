<Setting>:
    md_bg_color: 1,1,1,1
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: ("#3271F9")
        size_hint_y: 0.3
        radius: [0,0,50,0]
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}
        padding: '30dp'
        Widget:
            size_hint_y: None
            height: dp(55)
        MDLabel:
            text: "Pengaturan"
            font_style: 'H4'
            bold: True
            color: 1,1,1,1
    MDBoxLayout:
        orientation: 'vertical'
        padding: '30dp', '20dp'
        size_hint_y: None
        height: root.height / 1.5
        
        y: 100
        MDList:
            spacing: '10dp'
            padding: '0dp', '100dp', '0dp', '0dp'
            
            OneLineIconListItem:
                text: 'Profile'
                font_style: 'Subtitle1'
                halign: 'left'
                on_release:
                    root.parent.parent.parent.parent.manager.transition.direction = "left" 
                    root.parent.parent.parent.parent.manager.current = 'profile'
                IconLeftWidget:
                    icon: "account-circle-outline"
                
            OneLineIconListItem:
                text: 'Ubah Password'
                font_style: 'Subtitle1'
                halign: 'left'
                on_release:
                    root.parent.parent.parent.parent.manager.transition.direction = "left" 
                    root.parent.parent.parent.parent.manager.current = 'changepass'
                IconLeftWidget:
                    icon: "key-change"
                

            OneLineIconListItem:
                text: 'Stop Loss'
                font_style: 'Subtitle1'
                halign: 'left'
                on_release:
                    root.parent.parent.parent.parent.manager.transition.direction = "left" 
                    root.parent.parent.parent.parent.manager.current = 'stoploss'
                IconLeftWidget:
                    icon: "close-octagon-outline"
            OneLineIconListItem:
                text: 'Bantuan'
                font_style: 'Subtitle1'
                halign: 'left'
                IconLeftWidget:
                    icon: "help-circle-outline"

            OneLineIconListItem:
                text: 'Keluar'
                radius: 10
                md_bg_color: ("#ff1420")
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                halign: 'center'
                pos_hint: {'center_x': 0.5}
                size_hint_x: None
                width: root.width /1.2
                on_release:
                    root.parent.parent.parent.parent.manager.transition.direction = "right" 
                    root.logout()
                IconLeftWidget:
                    icon: "logout-variant"
                
            
