<Changepass>:
    md_bg_color: 1,1,1,1

    MDIconButton:
        icon: 'arrow-left'
        custom_color: ("#3271F9")
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = 'botnav'
        pos_hint: {'center_x': 0.1,'center_y': 0.95}

    MDBoxLayout:
        orientation: 'vertical'
        padding: '30dp'
        spacing: '20dp'
        size_hint_y: None
        height: root.height /1.4
        # md_bg_color: 0,1,0,1
        y: 150
        MDLabel:
            text: "Ubah Password"
            font_style: "H5"
            bold: True
            pos_hint: {'center_x': 0.6}
        
        MDTextField:
            id: new_password
            mode: "round"
            size_hint_x: 0.7
            hint_text: "Password Baru"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            icon_right: "eye-off"
            helper_text: "Password"
            password: True

        MDTextField:
            id: password_confirm
            mode: "round"
            size_hint_x: 0.7
            hint_text: "Konfirmasi Password"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            icon_right: "eye-off"
            helper_text: "Password"
            password: True
        
        Widget:
            size_hint_y: None
            height: dp(0)

        MDFillRoundFlatButton:
            text: 'Simpan'
            size_hint_x: 0.8
            md_bg_color: ("#3271F9")
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            on_release:
                root.update_password()
                root.clear_text()
            
            