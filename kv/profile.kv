            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            
            
        MDTextField:
            hint_text: "Email Anda"
            max_text_length: 30
            size_hint_x: 0.7
            helper_text: "Email"
            mode: "round"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}

        MDTextField:
            hint_text: "Nomer Handphone"
            max_text_length: 30
            size_hint_x: 0.7
            helper_text: "Nomor HP"
            mode: "round"
            fill_color_normal: ("ffffff")
