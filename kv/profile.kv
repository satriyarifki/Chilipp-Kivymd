<Profile>: 
    md_bg_color: 1,1,1,1

    MDIconButton:
        icon: 'arrow-left'
        custom_color: ("#3271F9")
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = 'botnav'
        pos_hint: {'center_x': 0.1,'center_y': 0.95}

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: root.height / 1.2
        width: root.width / 2
        padding: "20dp"
        spacing: '25dp'
        y: 100
        Widget:
            size_hint_y: None
            height: dp(0)
        MDLabel:
            text: "Profile Akun"
            font_style: "H5"
            bold: True
            pos_hint: {'center_x': 0.6}
            
        MDFillRoundFlatButton:
            text: 'Tampilkan Profil'
            md_bg_color: ("#3271F9")
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            pos_hint: {'center_x': 0.7,'center_y': 0.0}
            on_release:
                root.show_profile()
        MDTextField:
            id: email
            hint_text: "Email"
            max_text_length: 30
            size_hint_x: 0.7
            helper_text: "Email"
            mode: "round"
            readonly: True
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}

        MDSeparator:

        MDTextField:
            id: nama
            hint_text: "Nama Anda"
            max_text_length: 
            size_hint_x: 0.7
            helper_text: "Nama"
            mode: "round"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            
            
        MDTextField:
            id: alamat
            hint_text: "Alamat Anda"
            max_text_length: 30
            size_hint_x: 0.7
            helper_text: "Alamat"
            mode: "round"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
        
        Widget:
            size_hint_y: None
            height: dp(5)

        MDFillRoundFlatButton:
            text: 'Simpan'
            size_hint_x: 0.8
            md_bg_color: ("#3271F9")
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            on_release:
                root.update_profile()
        