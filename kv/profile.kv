<Profile>: 
    md_bg_color: 1,1,1,1

    MDIconButton:
        icon: 'arrow-left'
        custom_color: ("#3271F9")
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = 'botnav'
        pos_hint: {'center_x': 0.1,'center_y': 0.95}

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: root.height / 1.2
        width: root.width / 2
        padding: "20dp"
        spacing: '25dp'
        y: 100
        Widget:
            size_hint_y: None
            height: dp(0)
        MDLabel:
            text: "Daftar"
            font_style: "H5"
            bold: True
            pos_hint: {'center_x': 0.6}
            
            
        MDTextField:
            hint_text: "Username"
            max_text_length: 30
            size_hint_x: 0.7
            helper_text: "Username"
            mode: "round"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}

        MDSeparator:

        MDTextField:
            hint_text: "Nama Anda"
            max_text_length: 
