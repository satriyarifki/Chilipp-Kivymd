<Signup>:
    MDFloatLayout:
        md_bg_color: 1,1,1,1
    
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: ("##7ea6fc")
        size_hint_y: 0.3
        radius: [0,0,0,50]
        pos_hint: {'center_x': 0.55, 'center_y': 0.94}
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: ("#3271F9")
        size_hint_y: 0.3
        radius: [0,0,0,50]
        pos_hint: {'center_x': 0.5, 'center_y': 0.96}
    Image:
        source: "assets\img\white chilipp.png"
        size_hint: None, None
        width: dp(120)
        pos_hint: {'center_x': 0.5,'center_y': 0.9}
    
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: root.height / 1.21
        width: root.width / 2
        padding: "20dp"
        spacing: '15dp'
        Widget:
            size_hint_y: None
            height: dp(0)
        MDLabel:
            text: "Daftar"
            font_style: "H5"
            bold: True
            pos_hint: {'center_x': 0.6}
            
            
        MDTextField:
            id: nama
            hint_text: "Nama Anda"
            max_text_length: 50
            size_hint_x: 0.7
            helper_text: "Nama"
            mode: "round"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            
            
        MDTextField:
            id: email
            hint_text: "Email Anda"
            max_text_length: 50
            size_hint_x: 0.7
            helper_text: "Email"
            mode: "round"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            
        MDTextField:
            id: password
            mode: "round"
            size_hint_x: 0.7
            hint_text: "Password"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            icon_right: "eye-off"
            helper_text: "Password"
            password: True
        MDTextField:
            id: password_confirm
            mode: "round"
            size_hint_x: 0.7
            hint_text: "Konfirmasi Password"
            fill_color_normal: ("ffffff")
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            icon_right: "eye-off"
            helper_text: "Password"
            password: True

        
        MDGridLayout:
            cols: 5
            padding: '0dp'
            size_hint_x: None
            adaptive_height: True
            width: root.width/ 1.5
            pos_hint: {'center_x': 0.5}
            MDLabel:
                text: "Petani"
                color:
                size_hint_x: None
                font_style: "Body2"
                width: dp(45)
                pos_hint: None, None
                
            MDCheckbox:
                id: role
                size_hint: None, None
                size: "30dp", "30dp"
                pos_hint: None, None
                group: 'check'
                on_active:
                    root.checkrole(self, self.active, "petani")
                
            Widget:
                size_hint_x: None
                width: dp(70)

            MDLabel:
                text: "Pengepul"
                font_style: "Body2"
                size_hint_x: None
                width: dp(60)
                color:
            MDCheckbox:
                id: role
                size_hint: None, None
                size: "30dp", "30dp"
                group: 'check'
                on_active:
                    root.checkrole(self, self.active, "pengepul")
                

        MDFillRoundFlatButton:
            text: "Daftar"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5,'center_y': 0.0}
            on_release:
                # root.manager.transition.direction = "left"
                # root.manager.current = 'botnav'
                root.register()

        
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5}
            spacing: '10dp'
            MDLabel:
                text: "Punya akun?"
                halign: "right"
                font_style: "Caption"
                size_hint_x: None
                width: root.width / 2.1
                pos_hint: {'right': 1}
                
                
            MDTextButton:
                text: "Masuk"
                bold: True
                font_style: "Caption"
                theme_text_color: "Custom"
                text_color: ("#3271F9")
                size_hint_x: None
                width: root.width / 2
                pos_hint: {'center_y': 0.5, 'left': 1}
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = 'login'
                